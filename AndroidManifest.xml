<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.flyingmongoose.videotronusage"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.flyingmongoose.videotronusage.FirstRun"
            android:label="@string/app_name"
            android:noHistory="true"
            android:configChanges="orientation" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.flyingmongoose.videotronusage.MainActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:configChanges="orientation" >
        </activity>
        <activity
            android:name="com.flyingmongoose.videotronusage.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:noHistory="true"
            android:configChanges="orientation" >
        </activity>
    </application>

</manifest>
